@model MichaFinancialGroup.ViewModels.Customer.CustomerNewViewModel

@{
    ViewData["Title"] = "New Customer";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Customer</h4>
                        <p class="card-category">New Customer</p>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Customer" asp-action="New">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Given name</label>
                                        <input type="text" asp-for="Givenname" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.Givenname" class="field-validation-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Surname</label>
                                        <input type="text" asp-for="Surname" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.Surname" class="field-validation-error"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="bmd-label-floating" asp-for="SelectedGender">Select Gender</label>
                                        <select asp-for="SelectedGender"
                                                asp-items="@Model.Genders" class="form-control" style="background-color: #282c44 !important;"></select>
                                        <span style="color : red" asp-validation-for="@Model.SelectedGender" class="field-validation-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="NationalId" class="bmd-label-floating">Personal Number</label>
                                        <input type="number" asp-for="@Model.NationalId" value="@Model.NationalId" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.NationalId" class="field-validation-error"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Streetaddress" class="bmd-label-floating">Address</label>
                                        <input type="text" asp-for="@Model.Streetaddress" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.Streetaddress" class="field-validation-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="City" class="bmd-label-floating">City</label>
                                        <input type="text" asp-for="@Model.City" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.City" class="field-validation-error"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Zipcode" class="bmd-label-floating">Zipcode</label>
                                        <input type="number" asp-for="@Model.Zipcode" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.Telephonecountrycode" class="field-validation-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Select Country</label>
                                        <select asp-for="SelectedCountry"
                                                asp-items="@Model.Countries" class="form-control" style="background-color: #282c44 !important;"></select>
                                        <span style="color : red" asp-validation-for="@Model.SelectedCountry" class="field-validation-error"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Telephonecountrycode" class="bmd-label-floating">TelephoneCountryCode</label>
                                        <input type="number" asp-for="@Model.Telephonecountrycode" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.Telephonecountrycode" class="field-validation-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Telephonenumber" class="bmd-label-floating">Telephone number</label>
                                        <input type="number" asp-for="@Model.Telephonenumber" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.Telephonenumber" class="field-validation-error"></span>
                                    </div>
                                </div>
                            </div> 
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Emailaddress" class="bmd-label-floating">Emailaddress</label>
                                        <input type="email" asp-for="@Model.Emailaddress" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.Emailaddress" class="field-validation-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label asp-for="Birthday" class="bmd-label-floating">Birthday</label>
                                        <input type="date" asp-for="@Model.Birthday" class="form-control">
                                        <span style="color : red" asp-validation-for="@Model.Birthday" class="field-validation-error"></span>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">Submit</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
