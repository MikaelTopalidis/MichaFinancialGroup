@model MichaFinancialGroup.ViewModels.Customer.CustomerTopTenViewModel

@{
    ViewData["Title"] = "Top 10 in Country";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Top 10 @Model.Country</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="">
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var customer in Model.Customers)
                                    {
                                        <tr class="clickable-row" data-href="/customer/details/@customer.Id">
                                            <td>@customer.Id</td>
                                            <td>@customer.Name</td>
                                            <td>@customer.TotalBalance</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
